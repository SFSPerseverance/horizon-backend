PORT=8080
# Get this from your Render PostgreSQL instance
DATABASE_URL=postgres://username:password@host:5432/dbname

# Comma-separated list of allowed front-end origins (no trailing slashes).
# Example for GitHub Pages:
#   https://<your-gh-username>.github.io
# You may also add your custom domain if you have one.
CORS_ORIGIN=https://<your-gh-username>.github.io

# Shared secret your Roblox server will send in the header `x-admin-token`.
# Generate something long and random.
ADMIN_TOKEN=change-me-super-secret

# If true, /api/create-verification will return the generated code in the response.
# Set to false in production so the code is never exposed to the browser.
DEBUG_RETURN_CODE=true

# Code TTL in minutes
CODE_TTL_MINUTES=10
